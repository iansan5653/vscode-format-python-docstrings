{
  "name": "format-python-docstrings",
  "displayName": "Python Docstring Formatter",
  "publisher": "iansan5653",
  "description": "Format docstrings in Python using PEP 257 standards.",
  "version": "1.1.0",
  "icon": "icon.png",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/iansan5653/vscode-format-python-docstrings"
  },
  "issues": {
    "url": "https://github.com/iansan5653/vscode-format-python-docstrings/issues"
  },
  "engines": {
    "vscode": "^1.36.0"
  },
  "galleryBanner": {
    "color": "#eeeeee",
    "theme": "light"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run lint & npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && npm run testWithoutCompile",
    "testWithoutCompile": "node out/test/run-tests-stable.js",
    "testInsiders": "npm run compile && npm run testWithoutCompile",
    "testWithoutCompileInsiders": "node out/test/run-tests-insiders.js",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.3",
    "@types/vscode": "^1.36.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^17.0.0",
    "glob": "^7.1.4",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "typescript": "^3.5.3",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "compress-tag": "^1.1.4",
    "diff": "^4.0.1",
    "util": "^0.12.1"
  },
  "keywords": [
    "python",
    "docstrings",
    "format",
    "PEP",
    "docstring"
  ],
  "preview": false,
  "greenkeeper": {
    "commitMessages": {
      "initialBadge": "Add Greenkeeper badge",
      "initialDependencies": "Update dependencies",
      "initialBranches": "Whitelist greenkeeper branches",
      "dependencyUpdate": "Update ${dependency} to version ${version}",
      "devDependencyUpdate": "Update ${dependency} to version ${version}",
      "dependencyPin": "Pin ${dependency} to ${oldVersion}",
      "devDependencyPin": "Pin ${dependency} to ${oldVersion}"
    },
    "prTitles": {
      "initialPR": "Update dependencies to enable Greenkeeper",
      "initialPrBadge": "Add badge to enable Greenkeeper",
      "initialPrBadgeOnly": "Add Greenkeeper badge",
      "initialSubgroupPR": "Update dependencies for ${group}",
      "basicPR": "Update ${dependency} to the latest",
      "groupPR": "Update ${dependency} in group ${group} to the latest"
    }
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Python Docstring Formatter configuration",
      "properties": {
        "docstringFormatter.wrapSummariesLength": {
          "type": "number",
          "default": 79,
          "markdownDescription": "Wrap long summary lines at this length; set to `0` to disable wrapping."
        },
        "docstringFormatter.wrapDescriptionsLength": {
          "type": "number",
          "default": 72,
          "markdownDescription": "Wrap descriptions at this length; set to `0` to disable wrapping."
        },
        "docstringFormatter.preSummaryNewline": {
          "type": "boolean",
          "default": false,
          "description": "Add a blank line before the summary of a multi-line docstring."
        },
        "docstringFormatter.makeSummaryMultiline": {
          "type": "boolean",
          "default": false,
          "description": "Add a blank line before and after the summary of a one-line docstring."
        },
        "docstringFormatter.forceWrap": {
          "type": "boolean",
          "default": false,
          "description": "Force descriptions to be wrapped even if it may result in a mess."
        }
      }
    }
  }
}
